extends ../layouts/common
block content 
    .container 
        h1 LOGIN 
        if (errors)
            each error in errors
                .alert.alert-danger= error
        form(action="/auth/login", method="POST")
            label(for="email", class="me-2") Email
            input(type="text", name="email", class="form-control", value= values ? values.email : "")
            label(for="password", class="me-2") Password
            input(type="password", name="password", class="form-control", value= values ? values.password : "")

            button(class="btn btn-primary mt-2") Login